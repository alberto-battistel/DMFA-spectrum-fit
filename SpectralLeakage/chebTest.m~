
x = 0:0.01:1;
n = 6;
y = zeros(n+1, length(x));


for d = 0:n
    y(d+1,:) = myChebyshevPoly2(d,x);
end

figure(1)
clf
color = jet(n+1);
hold on

for d = 0:n
    plot(x, y(d+1,:), 'color', color(d+1,:))
end

hold off


n = degree;
m = length(x);
%% Generate the z variable as a mapping of your x data range into the 
%% interval [-1,1]

z = ((x-min(x))-(max(x)-x))/(max(x)-min(x));

A(:,1) = ones(m,1);
if n > 1
   A(:,2) = z;
end
if n > 2
  for k = 3:n+1
     A(:,k) = 2*z.*A(:,k-1) - A(:,k-2);  %% recurrence relation
  end
end